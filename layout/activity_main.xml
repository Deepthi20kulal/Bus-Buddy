<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/startbg">

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/c1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"/>

    <TextView
        android:id="@+id/toMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="to"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/busBuddyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="BusBuddy"
        android:textColor="@color/c1"
        android:textSize="40sp"
        android:layout_marginTop="250dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/exploreButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:text="Explore Buses"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/journeyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have a great journey!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/exploreButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>
</RelativeLayout>


